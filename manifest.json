{
  "manifest_version": 3,
  "name": "Free Games Alert|FGA",
  "version": "1.0",
  "description": "Affiche les jeux payants actuellement gratuits.",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "Free Games Alert|FGA",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": ["storage", "alarms", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.gamerpower.com/*",
    "https://store-site-backend-static.ak.epicgames.com/*",
    "https://epicgames.com/*"
  ]
}