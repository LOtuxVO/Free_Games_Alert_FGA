{
  "manifest_version": 3,
  "name": "GX Free Games Finder",
  "version": "1.0",
  "description": "Affiche les jeux payants actuellement gratuits.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": ["storage", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.gamerpower.com/*"
  ]
}